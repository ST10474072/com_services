<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_SERVICES_SINGLE_SERVICE_VIEW">
        <message>COM_SERVICES_SINGLE_SERVICE_VIEW_DESC</message>
    </layout>
    <fields name="params" addrulepath="/administrator/components/com_services/src/Rule">
        <fieldset name="basic" label="JGLOBAL_FIELDSET_BASIC">
            <field 
                name="service_id" 
                type="sql" 
                default=""
                query="SELECT id, title FROM #__services_items WHERE state = 1 ORDER BY title ASC"
                key_field="id"
                value_field="title"
                label="COM_SERVICES_SELECT_SERVICE_LABEL" 
                description="COM_SERVICES_SELECT_SERVICE_DESC">
                <option value="">COM_SERVICES_SELECT_SERVICE_OPTION</option>
            </field>
            
            <field 
                name="show_page_heading" 
                type="radio" 
                default="1"
                class="btn-group btn-group-yesno"
                label="JGLOBAL_SHOW_PAGE_HEADING_LABEL" 
                description="JGLOBAL_SHOW_PAGE_HEADING_DESC">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            
            <field 
                name="page_heading" 
                type="text" 
                label="JGLOBAL_PAGE_HEADING_LABEL" 
                description="JGLOBAL_PAGE_HEADING_DESC" />
        </fieldset>
        
        <fieldset name="display" label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS">
            <field 
                name="show_reviews" 
                type="radio" 
                default="1"
                class="btn-group btn-group-yesno"
                label="COM_SERVICES_SHOW_REVIEWS_LABEL" 
                description="COM_SERVICES_SHOW_REVIEWS_DESC">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            
            <field 
                name="show_contact_form" 
                type="radio" 
                default="1"
                class="btn-group btn-group-yesno"
                label="COM_SERVICES_SHOW_CONTACT_FORM_LABEL" 
                description="COM_SERVICES_SHOW_CONTACT_FORM_DESC">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            
            <field 
                name="show_location_map" 
                type="radio" 
                default="1"
                class="btn-group btn-group-yesno"
                label="COM_SERVICES_SHOW_LOCATION_MAP_LABEL" 
                description="COM_SERVICES_SHOW_LOCATION_MAP_DESC">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
        </fieldset>
    </fields>
</metadata>