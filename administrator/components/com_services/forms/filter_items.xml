<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
            name="search"
            type="text"
            label="COM_SERVICES_FILTER_SEARCH_LABEL"
            description="COM_SERVICES_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
            class="js-stools-search-string"
        />

        <field
            name="state"
            type="list"
            label="JOPTION_SELECT_PUBLISHED"
            description="COM_SERVICES_FILTER_STATE_DESC"
            onchange="this.form.submit();"
            default=""
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>

        <field
            name="featured"
            type="list"
            label="COM_SERVICES_FILTER_FEATURED_LABEL"
            description="COM_SERVICES_FILTER_FEATURED_DESC"
            onchange="this.form.submit();"
            default=""
        >
            <option value="">COM_SERVICES_SELECT_FEATURED</option>
            <option value="1">COM_SERVICES_FEATURED</option>
            <option value="0">COM_SERVICES_NOT_FEATURED</option>
        </field>

        <field
            name="category_id"
            type="category"
            label="JCATEGORY"
            description="COM_SERVICES_FILTER_CATEGORY_DESC"
            extension="com_services"
            onchange="this.form.submit();"
            default=""
        />
    </fields>

    <fields name="list">
        <field
            name="fullordering"
            type="list"
            label="COM_SERVICES_LIST_FULL_ORDERING"
            description="COM_SERVICES_LIST_FULL_ORDERING_DESC"
            onchange="this.form.submit();"
            default="a.created DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.title ASC">COM_SERVICES_TITLE_ASC</option>
            <option value="a.title DESC">COM_SERVICES_TITLE_DESC</option>
            <option value="a.location ASC">COM_SERVICES_LOCATION_ASC</option>
            <option value="a.location DESC">COM_SERVICES_LOCATION_DESC</option>
            <option value="a.state ASC">JPUBLISHED_ASC</option>
            <option value="a.state DESC">JPUBLISHED_DESC</option>
            <option value="a.created ASC">JDATE_ASC</option>
            <option value="a.created DESC">JDATE_DESC</option>
            <option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
            <option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
        </field>

        <field
            name="limit"
            type="limitbox"
            class="input-mini"
            default="25"
            label="COM_SERVICES_LIST_LIMIT"
            description="COM_SERVICES_LIST_LIMIT_DESC"
            onchange="this.form.submit();"
        />
    </fields>
</form>